@import "../../../components/headline/headline.wxss";

page {
    background: #f5f5f5;
    font-size: 30rpx;
}

.con {
    width: 100%;
    height: 100%;
    margin-top: 20rpx;
    font-size: 36rpx;
    font-weight: blod;
    color: #fcbc4e;
}

.con .title {
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}

.con .title image {
    width: 50rpx;
    height: 50rpx;
    position: relative;
    top: 10rpx;
    margin-right: 15rpx;
}

.con .top {
    width: 90%;
    height: 500rpx;
    margin-left: 5%;
    background: #ffffff;
    box-shadow: 10rpx 20rpx 30rpx #dee3e6;
    margin-top: 20rpx;
}

.con .top .today {
    display: block;
    width: 120rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 26rpx;
    background: #c2cacc;
    position: relative;
    top: -25rpx;
    text-align: center;
    color: white;
    left: 30rpx;
}

.con .top .qiwen {
    font-size: 64rpx;
    color: #fcbc4e;
    margin-left: 30rpx;
}

.con .top .top-img {
    width: 69rpx;
    height: 61rpx;
    position: relative;
    float: right;
    top: -110rpx;
    right: 40rpx;
}

.con .top .address {
    display: block;
    margin-left: 30rpx;
    font-size: 34rpx;
    color: gray;
}

.con .top .btm {
    width: 100%;
    height: 50rpx;
    font-size: 26rpx;
    color: gray;
    line-height: 50rpx;
    margin-left: 30rpx;
    margin-top: 30rpx;
}

.con .top .btm .txt {
    display: block;
    float: left;
    height: 100%;
    margin-right: 20rpx;
}

.re-ul {
    width: 200rpx;
    height: 200rpx;
    border-right: 1rpx solid #dee3e6;
    display: inline-block;
    text-align: center;
    margin-top: 20rpx;
}

.re-ul .time {
    display: block;
    font-size: 26rpx;
    color: gray;
}

.re-ul image {
    width: 69rpx;
    height: 61rpx;
    margin-top: 20rpx;
}

.re-ul .du {
    font-size: 50rpx;
    display: block;
    color: gray;
}

.we-ul {
    width: 100%;
    height: auto;
    margin-top: 50rpx;
}

.we-ul .li {
    width: 80%;
    height: 120rpx;
    margin-left: 10%;
    border-bottom: 1rpx solid #dadada;
    padding-top: 30rpx;
}

.we-ul .li .time {
    font-size: 20rxp;
    color: gray;
}

.we-ul .li .add-we {
    display: block;
    font-size: 32rpx;
    color: gray;
}

.we-ul .li image {
    width: 69rpx;
    height: 61rpx;
    position: relative;
    float: right;
    top: -75rpx;
}