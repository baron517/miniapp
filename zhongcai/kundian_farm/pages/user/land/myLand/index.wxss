@import "../../../../components/headline/headline.wxss";

page {
    background-color: #fafafa;
}

.container {
    width: 94%;
    margin: 2rpx auto;
    border-radius: 20rpx;
    background-color: #fff;
    box-shadow: 0 2rpx 5rpx rgba(238,238,238,0.8);
    overflow: hidden;
}

.title_name {
    font-size: 40rpx;
    color: #fc8535;
    font-weight: 400;
    letter-spacing: 3rpx;
    position: relative;
    text-align: center;
}

.sup {
    position: absolute;
    right: 15rpx;
    top: 0rpx;
    font-size: 20rpx;
}

.title_desc {
    color: #ffc096;
    font-size: 32rpx;
    text-align: center;
    margin-top: 10rpx;
    letter-spacing: 3rpx;
}

.orderInfo_container {
    width: 100%;
    margin-top: 40rpx;
    border-top: 1rpx dashed #fc8535;
    border-bottom: 1rpx dashed #fc8535;
    padding: 30rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    color: #1e1b1c;
}

.head {
    color: #6a6767;
    width: 200rpx;
}

.upload {
    width: 100%;
    height: 130rpx;
    border-radius: 20rpx;
    background-color: #fc8535;
    margin-top: 30rpx;
    color: #fff;
    font-size: 34rpx;
    text-align: center;
    overflow: hidden;
}

.icon {
    width: 35rpx;
    height: 35rpx;
}

.seed_container {
    width: 90%;
    border-radius: 20rpx;
    border: 1rpx solid #dadddc;
    margin: 30rpx auto;
    padding-bottom: 20rpx;
}

.seed_title {
    font-size: 32rpx;
    font-weight: 400;
    color: #454545;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    letter-spacing: 3rpx;
}

.seed_item {
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.seedImg {
    width: 160rpx;
    height: 160rpx;
    border-radius: 15rpx;
    border: 1rpx solid #dadddc;
    overflow: hidden;
}

.seedImg image {
    width: 100%;
    height: 100%;
}

.seedInfo {
    margin-left: 30rpx;
    color: #a09e9e;
    font-size: 34rpx;
}

.seedName {
    width: 350rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #2e2a2b;
}

.total {
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    display: flex;
}

.total_title {
    font-size: 38rpx;
    font-weight: 600;
    color: #2e2a2b;
    height: 50rpx;
    line-height: 50rpx;
}

.payTime {
    font-size: 34rpx;
    color: #676666;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.borderBottom {
    border-bottom: 1rpx solid #dadddc;
}

.block20 {
    height: 20rpx;
}