@import "../../../components/headline/headline.wxss";

.banner {
    width: 100%;
    height: 564rpx;
    position: relative;
}

.bannerImg {
    width: 100%;
    height: 100%;
}

.video {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.monitor {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    top: 10rpx;
    right: 20rpx;
}

.mian {
    width: 94%;
    margin: 20rpx auto 0rpx;
}

.info_title {
    font-size: 34rpx;
    color: #232323;
    font-weight: 500;
}

.info_desc {
    font-size: 30rpx;
    margin-top: 20rpx;
    color: #3F3F3F;
    line-height: 40rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.aim_price {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
    font-size: 32rpx;
}

.aim_price view:first-child {
    color: #3F3F3F;
}

.aim_price view:last-child {
    color: #ff0000;
    margin-left: 20rpx;
}

.raise_wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    margin-top: 30rpx;
}

.raise_wrapper .item {
    width: 33.3%;
    text-align: center;
    padding: 10rpx 0;
    font-size: 32rpx;
}

.raise_wrapper .item:not(:last-child) {
    border-right: 1rpx solid #EFEFEF;
}

.raise_wrapper .item view:first-child {
    color: #3F3F3F;
}

.raise_wrapper .item view:last-child {
    color: #ff0000;
    margin-top: 20rpx;
}

.progress_bar {
    width: 100%;
    height: 15rpx;
    background: #DFDFDF;
    border-radius: 7.5rpx;
    margin-top: 40rpx;
    position: relative;
}

.progress_item {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    border-radius: 7.5rpx;
    z-index: 5;
}

.progress_content {
    border-radius: 20rpx;
    width: 130rpx;
    height: 45rpx;
    line-height: 45rpx;
    text-align: center;
    font-size: 30rpx;
    position: absolute;
    background: #fff;
    z-index: 10;
    top: -17rpx;
    margin-left: -65rpx;
}

.block {
    width: 100%;
    height: 30rpx;
    background: #F4F3F1;
    margin-top: 40rpx;
}

.common_title {
    font-size: 36rpx;
    font-weight: 500;
    color: #232323;
    padding-bottom: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.level_wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.level_wrapper .item {
    width: 25%;
    font-size: 32rpx;
}

.level_wrapper .item view {
    width: 90%;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 15rpx;
    color: #000;
    border: 1rpx solid #E7E7E7;
    text-align: center;
    margin-bottom: 20rpx;
}

.info_descs {
    font-size: 30rpx;
    line-height: 50rpx;
}

.picture_wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 30rpx;
}

.picture_wrapper image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 15rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.heard_wrapper {
    width: 100%;
    background: #F4F3F1;
    padding: 35rpx 0;
    margin-top: 30rpx;
}

.line {
    width: 90%;
    height: 6rpx;
    background: #ECECEC;
    margin: 0 auto;
    position: relative;
}

.title_wrapper {
    width: 250rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    background-color: #F4F3F1;
    font-size: 34rpx;
    font-weight: 500;
    position: absolute;
    top: -25rpx;
    left: 212.5rpx;
}

.projectInfo_wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
    padding: 20rpx 0;
    border-top: 1rpx solid #EFEFEF;
}

.projectInfo_wrapper view:first-child {
    color: #939393;
}

.projectInfo_wrapper view:last-child {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: right;
    color: #3F3F3F;
}

.history {
    font-weight: normal;
    color: #8A8A8A;
    display: flex;
    align-items: center;
    font-size: 36rpx;
}

.history_wrapper {
    display: flex;
    align-items: flex-start;
    margin-top: 20rpx;
}

.time_wrapper {
    padding: 0 20rpx;
    box-sizing: border-box;
}

.item_date {
    font-size: 40rpx;
    font-weight: 500;
    color: #232323;
}

.item_time {
    font-size: 32rpx;
    color: #8A8A8A;
    margin-top: 10rpx;
}

.item_inners {
    flex: 1;
    font-size: 30rpx;
    line-height: 45rpx;
    color: #3B3B3B;
    border-left: 10rpx solid #16BA63;
    padding: 10rpx 0 10rpx 20rpx;
    box-sizing: border-box;
}

.footer_block {
    height: 100rpx;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    display: flex;
    align-items: center;
    width: 100%;
    height: 100rpx;
    z-index: 50;
}

.footer button {
    font-size: 25rpx;
    width: 50rpx;
    text-align: center;
    height: 100rpx;
    line-height: 46rpx;
    background: white;
    padding: 0;
    position: relative;
    color: #3B3B3B;
}

button::after {
    border: none;
}

.icon_wrapper {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    font-size: 24rpx;
    color: #3B3B3B;
}

.icon_wrapper:not(:last-child) {
    border-right: 1rpx solid #DADADA;
}

.buyNow {
    flex: 1;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 32rpx;
    letter-spacing: 3rpx;
}

.success {
    flex: 1;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    background: #8C8C8C;
    font-size: 32rpx;
    letter-spacing: 3rpx;
}

.model {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,.3);
    z-index: 100;
}

.model_wrapper {
    position: fixed;
    width: 100%;
    transition: all .3s;
    height: 900rpx;
    background: #fff;
    z-index: 120;
}

.show {
    bottom: 0;
    left: 0;
}

.hide {
    bottom: -1000rpx;
    left: 0;
}

.level_content {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 36rpx;
    color: #1C1C1C;
    font-weight: 500;
    margin-bottom: 30rpx;
}

.reduce {
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 10rpx 0 0 10rpx;
    border: 1rpx solid #D1D1D1;
    color: #989898;
    font-size: 36rpx;
    margin-right: -1rpx;
}

.input {
    padding: 0;
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 36rpx;
    text-align: center;
    border: 1rpx solid #D1D1D1;
    color: #989898;
}

.add {
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 0 10rpx 10rpx 0;
    border: 1rpx solid #D1D1D1;
    color: #989898;
    font-size: 36rpx;
    margin-left: -1rpx;
}

.confrim {
    width: 100%;
    height: 100rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    line-height: 100rpx;
    letter-spacing: 3rpx;
}