@import "../../../components/headline/headline.wxss";

page {
    background-color: #f4f4f4;
}

.line {
    width: 100%;
    height: 10rpx;
    display: flex;
    align-items: center;
}

.line image {
    width: 100%;
    height: 10rpx;
}

.positionImg {
    font-size: 60rpx;
    color: #929292;
}

.address {
    flex: 1;
    margin-left: 15rpx;
    font-size: 30rpx;
    color: #333333;
}

.right {
    font-size: 40rpx;
    color: #282828;
}

.defaultAdr {
    padding: 20rpx 100rpx;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #000;
}

.headImg {
    width: 180rpx;
    height: 180rpx;
}

.itemName {
    font-size: 28rpx;
    color: #3e3e3e;
    width: 450rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.message {
    flex: 1;
    background-color: #f5f5f5;
    border-radius: 10rpx;
    padding: 10rpx;
    line-height: 45rpx;
}

.footer_block {
    height: 100rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-top: 1rxp solid #dfdfdf;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    z-index: 200;
    left: 0;
    bottom: 0;
}

.payfor {
    width: 250rpx;
    height: 100%;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
}

.notice {
    padding: 30rpx;
    box-sizing: border-box;
    background: #fff;
    color: #141414;
}

.notice_title {
    font-size: 32rpx;
    margin-bottom: 20rpx;
}

.notice_inner {
    font-size: 24rpx;
    line-height: 45rpx;
}