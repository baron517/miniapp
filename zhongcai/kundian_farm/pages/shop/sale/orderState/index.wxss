@import "../../../../components/headline/headline.wxss";

.line {
    width: 100%;
    height: 10rpx;
    display: flex;
    align-items: center;
}

.lines {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
}

.lineImg {
    width: 100%;
    height: 100%;
}

.telephone {
    width: 28rpx;
    height: 45rpx;
}

.block20 {
    height: 20rpx;
    background-color: #f4f4f4;
}

.headImg {
    width: 180rpx;
    height: 180rpx;
}

.itemName {
    font-size: 28rpx;
    color: #3e3e3e;
    width: 450rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.w300 {
    text-align: right;
    width: 250rpx;
}

.confirm {
    width: 200rpx;
    border: none;
    color: #fff;
    background-color: #fc8535;
    line-height: 2.5;
    font-size: 30rpx;
    margin: 30rpx 30rpx 30rpx 0rpx;
}

.confirm::after {
    border: none;
}

.cancelOrder {
    width: 200rpx;
    border: 1rpx solid #fc8535;
    color: #fc8535;
    background-color: #fff;
    line-height: 2.5;
    font-size: 30rpx;
    margin: 30rpx 30rpx 30rpx 0rpx;
}

.cancelOrder::after {
    border: none;
}

.model {
    background-color: rgba(0,0,0,0.5);
    z-index: 900;
    transition: all 0.3s;
}

.opacity0 {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

.bottom0 {
    bottom: 0rpx;
}

.bottom1 {
    bottom: -500rpx;
}

.info_container {
    position: fixed;
    left: 0;
    width: 100%;
    height: 450rpx;
    background-color: #fff;
    transition: all 0.3s;
    z-index: 999;
}

.model-title {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 36rpx;
    letter-spacing: 5rpx;
    font-weight: 400;
    color: #fc8535;
    background-color: #f0f0f0;
}

.info_item {
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #555353;
    font-size: 34rpx;
}

.Station {
    width: 80rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.address {
    width: 56rpx;
    height: 45rpx;
}

.OrderNumber {
    height: 45rpx;
    width: 45rpx;
}

.express_info {
    width: 400rpx;
    text-align: center;
}

.down {
    width: 30rpx;
    height: 30rpx;
}

.cancelBtn {
    width: 40%;
    color: #555353;
    font-size: 34rpx;
    background-color: #fff;
}

.confrimBtn {
    width: 40%;
    font-size: 34rpx;
    color: #fff;
    background-color: #fc8535;
}

.cancelBtn::after,.confrimBtn::after {
    border: none;
}