@import "../../../components/headline/headline.wxss";

.banner {
    width: 100%;
    height: 750rpx;
    position: relative;
}

.swiper {
    width: 100%;
    height: 750rpx;
    text-align: center;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.monitor {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    top: 10rpx;
    right: 20rpx;
}

.video {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}

.details {
    border-top: 1rpx solid #eaeaea;
    border-bottom: 1rpx solid #eaeaea;
    width: 100%;
    margin-top: 20rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.detailsName {
    color: #545454;
    font-size: 36rpx;
    line-height: 80rpx;
}

.describe {
    color: #8b8b8b;
    font-size: 32rpx;
}

.price {
    color: #545454;
    font-size: 38rpx;
    line-height: 70rpx;
    position: relative;
    padding-left: 25rpx;
}

.line20 {
    position: absolute;
    top: -5rpx;
    left: 0rpx;
    font-size: 24rpx;
}

.block20 {
    height: 20rpx;
    background-color: #f4f4f4;
}

.proDetail {
    width: 100%;
}

.proTitle {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #fc8535;
    line-height: 100rpx;
    border-bottom: 1rpx solid #eaeaea;
}

.proRules {
    width: 90%;
    margin: 40rpx auto;
    box-shadow: 0rpx 0rpx 15rpx rgba(0,0,0,0.3);
    box-sizing: border-box;
    padding: 30rpx;
}

.ruleTitle {
    font-size: 34rpx;
    color: #ff7002;
}

.ruleContent {
    margin-top: 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #4b4b4b;
    line-height: 50rpx;
}

.adoptContent {
    width: 90%;
    margin: 30rpx auto;
    color: #575757;
}

.AdopTitle {
    border-left: 10rpx solid #fc8535;
    font-size: 32rpx;
    color: #383838;
    padding-left: 30rpx;
    margin-bottom: 20rpx;
}

.block120 {
    height: 140rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fff;
    border-top: 1rpx solid #d2d2d2;
    display: flex;
    align-items: center;
}

.index {
    width: 120rpx;
    height: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #3f3f3f;
}

.joinCar {
    width: 270rpx;
    height: 100%;
    text-align: center;
    line-height: 100rpx;
    background: linear-gradient(to right,rgba(255,199,2,1),rgba(253,152,0,1));
    color: #fff;
    font-size: 32rpx;
}

.buyNow {
    width: 500rpx;
    height: 100%;
    text-align: center;
    line-height: 100rpx;
    background: linear-gradient(to right,rgba(255,115,2,1),rgba(255,80,4,1));
    color: #fff;
    font-size: 32rpx;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.3);
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 100%;
    height: 780rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    border-radius: 15rpx 15rpx 0 0;
}

.adoptImg {
    width: 240rpx;
    height: 240rpx;
    text-align: center;
    padding: 20rpx;
    box-sizing: border-box;
}

.adoptImg image {
    width: 200rpx;
    height: 200rpx;
}

.adoptPrice {
    font-size: 46rpx;
    margin-left: 20rpx;
}

.chooseTime {
    margin-top: 25rpx;
    font-size: 30rpx;
    color: #383838;
}

.chooseNum {
    width: 100%;
    overflow-y: auto;
    height: 440rpx;
    border-top: 1rpx solid #e6e6e6;
}

.adoptTime {
    height: 65rpx;
    text-align: center;
    line-height: 65rpx;
    float: left;
    margin-left: 20rpx;
    border: 1rpx solid #d6d6d6;
    border-radius: 5rpx;
    font-size: 30rpx;
    color: #383838;
    margin-bottom: 20rpx;
    padding: 0 10rpx 0 10rpx;
}

.clickNumLift {
    border: 1rpx solid #d6d6d6;
    border-radius: 5rpx 0 0 5rpx;
    width: 90rpx;
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
    color: #9e9e9e;
}

.clickNumRight {
    border: 1rpx solid #d6d6d6;
    border-radius: 0 5rpx 5rpx 0;
    width: 90rpx;
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
    color: #9e9e9e;
}

.chooseN {
    width: 200rpx;
    height: 60rpx;
    border: 1rpx solid #d6d6d6;
    border-radius: 0rpx;
    font-size: 30rpx;
    color: #9e9e9e;
    text-align: center;
    line-height: 60rpx;
}

.confrim {
    width: 100%;
    height: 100rpx;
    color: #fff;
    background-color: #fc8535;
    text-align: center;
    line-height: 100rpx;
    font-size: 34rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}

.bgOrg {
    background-color: #fc8535;
    color: #fff;
}

.footer button {
    font-size: 24rpx;
    width: 80rpx;
    text-align: center;
    height: 60rpx;
    line-height: 58rpx;
    background: white;
    padding: 0;
    position: relative;
    top: -9rpx;
}

button::after {
    border: none;
}

.service {
    width: 43rpx;
    height: 40rpx;
}

.tels {
    height: 40rpx;
    width: 36rpx;
}

.danwei {
    position: absolute;
    font-size: 24rpx;
}

.adoptContent .left {
    width: auto;
}