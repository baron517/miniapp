@import "../../../components/headline/headline.wxss";

.swiperS {
    width: 100%;
    height: 350rpx;
}

.slide-image {
    width: 100%;
    height: 100%;
}

page .wx-swiper-dots {
    bottom: 30rpx;
}

page .wx-swiper-dot {
    background: #fff;
    width: 20rpx;
    height: 13rpx;
    border-radius: 8rpx;
}

page .wx-swiper-dot.wx-swiper-dot-active {
    width: 60rpx;
    height: 13rpx;
    border-radius: 8rpx;
}

.shopAdd {
    width: 42rpx;
    height: 52rpx;
}

.searchInput {
    width: 100%;
    height: 65rpx;
    background-color: #f2f2f2;
    font-size: 30rpx;
    letter-spacing: 3rpx;
    border-radius: 10rpx;
    text-align: center;
    position: relative;
    color: #979797;
    margin-left: 30rpx;
}

.search {
    position: relative;
    z-index: 999;
    left: -486rpx;
}

.kefu {
    width: 70rpx;
    height: 70rpx;
    position: relative;
    padding: 0;
    margin: 0;
    margin-left: 20rpx;
    opacity: 0;
}

.kefu-icon {
    position: relative;
    left: -40rpx;
    z-index: 99;
    width: 60rpx;
}

.box {
    z-index: 0;
    width: 750rpx;
    height: 320rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.adoptItem {
    border-radius: 15rpx;
    box-shadow: 0rpx 5rpx 40rpx #cfcfcf;
}

.img2 {
    height: 250rpx;
    width: 600rpx;
    border-radius: 15rpx 15rpx 15rpx 15rpx;
}

.img {
    height: 200rpx;
    border-radius: 15rpx 15rpx 15rpx 15rpx;
}

.box .club:nth-child(1) {
    transform: scale(1,1)translateX(0rpx);
    opacity: 0.2;
    z-index: 10;
}

.box .club:nth-child(2) {
    transform: scale(1,1);
    opacity: 1;
    z-index: 100;
}

.box .club:nth-child(3) {
    transform: scale(1,1)translateX(0rpx);
    opacity: 0.2;
    z-index: 10;
}

.typesImg {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.items {
    text-align: center;
    font-size: 28rpx;
    color: #646464;
}

.block20 {
    height: 20rpx;
    background-color: #f4f4f4;
}

.height100 {
    height: 100rpx;
}

.doctor {
    width: 80rpx;
    height: 80rpx;
}

.chooseColor {
    width: 450rpx;
    color: #323232;
}

.exchangeContent {
    width: 100%;
    background-color: #f4f4f4;
    padding-bottom: 20rpx;
}

.Content {
    width: 48%;
    margin-left: 1.33%;
    margin-top: 10rpx;
    background-color: #fff;
    float: left;
    border-radius: 10rpx;
    overflow: hidden;
}

.Contentimage {
    width: 100%;
    height: 370rpx;
}

.goods-name {
    width: 100%;
    height: 80rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.item_wrapper {
    padding: 10rpx 20rpx 20rpx;
    box-sizing: border-box;
}

.classify_wrapper {
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.nav {
    color: #646464;
    position: relative;
    padding: 15rpx 10rpx;
    font-weight: 500;
}

.nav::before {
    position: absolute;
    content: '';
    display: block;
    width: 100%;
    height: 1px;
    opacity: 0;
    transition: all .3s;
    left: 0;
    bottom: 0;
    background: currentColor;
}

.active {
    color: #fc8535;
}

.active::before {
    content: '';
    width: 100%;
    left: 0;
    bottom: 0;
    transition: all .3s;
    opacity: 1;
}

.MoreTypeData {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    padding: 20rpx;
    box-sizing: border-box;
}

.type_item {
    width: 20%;
    text-align: center;
    font-size: 28rpx;
    color: #646464;
    margin-bottom: 15rpx;
}