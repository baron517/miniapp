@import "../../../../components/headline/headline.wxss";

.line {
    width: 100%;
    height: 10rpx;
}

.telephone {
    width: 28rpx;
    height: 45rpx;
}

.block20 {
    height: 20rpx;
    background-color: #f4f4f4;
}

.headImg {
    width: 180rpx;
    height: 180rpx;
}

.itemName {
    font-size: 28rpx;
    color: #3e3e3e;
    width: 450rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.w300 {
    text-align: right;
    width: 250rpx;
}

.confirm {
    width: 180rpx;
    border: none;
    color: #fff;
    background-color: #fc8535;
    line-height: 2;
    font-size: 30rpx;
    margin-right: 30rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.confirm::after {
    border: none;
}