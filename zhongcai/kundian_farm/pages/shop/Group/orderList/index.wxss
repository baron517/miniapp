@import "../../../../components/headline/headline.wxss";

page {
    background-color: #efefef;
}

.orderTitle {
    height: 60rpx;
    line-height: 60rpx;
    background-color: #fff;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    z-index: 999;
}

.block {
    height: 60rpx;
}

.currentIndex {
    border-bottom: 3rpx solid #fc8535;
    color: #fc8535;
}

.mainBody {
    width: 95%;
    margin: 10rpx auto 0rpx;
    background-color: #fff;
    padding-left: 10rpx;
}

.brb {
    border-bottom: 1rpx solid #cdcdcd;
}

.itemType {
    color: #fc8535;
    font-size: 34rpx;
    margin-bottom: 40rpx;
}

.HeadImg {
    width: 160rpx;
    height: 160rpx;
}

.itemName {
    font-size: 28rpx;
    width: 500rpx;
    color: #4d4d4d;
    line-height: 40rpx;
}

.btnArr {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    padding: 25rpx 0rpx;
}

.cancelOrder {
    border: 1rpx solid #cdcdcd;
    color: #303030;
    width: 200rpx;
    font-size: 30rpx;
    border-radius: 5rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 0rpx 20rpx;
}

.cancelOrder::after {
    border: none;
}

.PayOrder {
    color: #fff;
    width: 200rpx;
    font-size: 30rpx;
    background-color: #fc8535;
    border-radius: 5rpx;
    margin: 0rpx 20rpx;
    height: 70rpx;
    line-height: 70rpx;
}

.PayOrder::after {
    border: none;
}

.del-order {
    width: 30rpx;
    height: 30rpx;
    float: right;
    margin-right: 30rpx;
    margin-top: 7rpx;
}

.brb {
    border-top: 1rpx solid #f4f4f4;
    padding: 10rpx 0 10rpx 0;
    border-bottom: 1rpx solid #f4f4f4;
}