@import "../../../components/headline/headline.wxss";

page {
    background-color: #f4f4f4;
}

.positionImg {
    width: 50rpx;
    height: 64rpx;
}

.address {
    width: 500rpx;
    font-size: 30rpx;
    color: #333333;
}

.defaultAdr {
    padding: 20rpx 100rpx;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #000;
}

.headImg {
    width: 180rpx;
    height: 180rpx;
}

.itemName {
    font-size: 28rpx;
    color: #3e3e3e;
    width: 450rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.itemspec {
    width: 450rpx;
}

.message {
    width: 650rpx;
    background-color: #f5f5f5;
    border-radius: 5rpx;
    padding: 10rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-top: 1rxp solid #dfdfdf;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    color: #fc8535;
    position: fixed;
    bottom: 0;
    z-index: 999;
}

.payfor {
    position: absolute;
    right: 0;
    top: 0;
    width: 250rpx;
    height: 100%;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
}

.payfor button {
    background: #fc8535;
    height: 100%;
    width: 100%;
    text-align: center;
    color: white;
}

.address-line {
    width: 100%;
    height: 10rpx;
}

.address-line image {
    width: 100%;
    height: 100%;
    display: block;
}

.count-do {
    width: 90%;
    height: 100rpx;
    border-bottom: 1rpx solid #dfdfdf;
    font-size: 28rpx;
    padding: 0 5% 0 5%;
    background: white;
}

.count-do .count-title {
    width: 50%;
    height: 100%;
    line-height: 100rpx;
    float: left;
}

.count-do .count-txt {
    width: 50%;
    height: 100%;
    line-height: 100rpx;
    float: left;
}

.count-do .count-txt .jia,.count-do .count-txt .jian {
    display: block;
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 50rpx;
    float: right;
    background: #f4f4f4;
    position: relative;
    top: 25rpx;
    margin-right: 10rpx;
    margin-left: 10rpx;
}

.count-do .count-txt .count {
    float: right;
}

.space-btm {
    padding-bottom: 120rpx;
}

.item-price {
    float: right;
    color: #fc8535;
    font-size: 28rpx;
}

.goods-li-list {
    width: 80%;
}