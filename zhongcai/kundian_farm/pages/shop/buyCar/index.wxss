@import "../../../components/headline/headline.wxss";

page {
    background-color: #f7f7f7;
}

.buyItem {
    padding: 30rpx 20rpx;
    border-bottom: 1rpx solid #e4e4e4;
    background-color: #ffffff;
}

.headImg {
    width: 180rpx;
    height: 180rpx;
}

.itemName {
    font-size: 28rpx;
    color: #3e3e3e;
    width: 330rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.itemspec {
    width: 330rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.reduceNum {
    border: 1rpx solid #dadada;
    padding: 5rpx 20rpx;
    font-size: 30rpx;
    color: #414141;
}

.addNum {
    border: 1rpx solid #dadada;
    padding: 5rpx 20rpx;
    font-size: 30rpx;
    color: #414141;
}

.buyNum {
    border: 1rpx solid #dadada;
    padding: 5rpx 30rpx;
    font-size: 30rpx;
    color: #414141;
}

.deleteItem {
    position: relative;
    width: 120rpx;
    height: 182rpx;
}

.price {
    position: absolute;
    top: 0rpx;
}

.deleteIcon {
    position: absolute;
    bottom: 0rpx;
    left: 70rpx;
    color: gray;
}

.block120 {
    height: 120rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    background-color: #ffffff;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    padding: 0rpx 20rpx;
    box-sizing: border-box;
}

.Settlement {
    width: 250rpx;
    height: 100%;
    display: flex;
    align-items: center;
    position: absolute;
    top: 0;
    right: 0;
}

.Settlement view {
    width: 100%;
    height: 100%;
    color: #ffffff;
    text-align: center;
    line-height: 120rpx;
    font-size: 30rpx;
}

.none {
    width: 100%;
    height: 400rpx;
    margin-top: 150rpx;
    text-align: center;
}

.none image {
    width: 350rpx;
    height: 350rpx;
}

.none text {
    display: block;
    font-size: 28rpx;
    color: gray;
}

.none button {
    width: 30%;
    margin-left: 35%;
    height: 60rpx;
    background: #fc8535;
    color: white;
    margin-top: 20rpx;
    line-height: 60rpx;
}