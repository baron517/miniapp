 page{
  width:100%;
  height: 100%;
  background-color: #EDF0F3;

} 
.post-container{
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  position: relative;
}
.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  width: 100%;
  height: 400rpx;
}
.post-content{
  color: #fff;
  font-size: 30rpx;
  letter-spacing: 5rpx; 
  position: absolute;
  top: 430rpx;
  left: 20rpx;
}
.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
  margin-top:25rpx; 
  position: absolute;
  left: 400rpx;

}
.post-like-image{
  width: 16px;
  height: 16px;
  margin-right: 10rpx;
/* 居中 */
   vertical-align: middle;   
  
}
.post-like-font{
  vertical-align: middle;
  margin-right: 70rpx;
}
.post-fang{
  height: 90rpx;
  width: 90rpx;
  position: absolute;
  left: 50%;
  margin-left:-45rpx; 
  margin-top:250rpx; 
}
